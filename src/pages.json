			"path": "pages/cmptExample/image",
			"name": "cmptImg",
			"style": {
				"navigationBarTitleText": "image示例"
			}
		},
		{
			"path": "pages/cmptExample/input",
			"name": "cmptInput",
			"style": {
				"navigationBarTitleText": "input示例"
			}
		},
		{
			"path": "pages/cmptExample/colors",
			"name": "cmptColors",
			"style": {
				"navigationBarTitleText": "colors示例"
			}
		},
		{
			"path": "pages/cmptExample/button",
			"name": "cmptButton",
			"style": {
				"navigationBarTitleText": "button示例"
			}
		},
		{
			"path": "pages/cmptExample/cell",
			"name": "cmptCell",
